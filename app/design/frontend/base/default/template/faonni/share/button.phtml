<?php $collection = $this->getCollection() ?>
<?php if(0 < $collection->count()): ?>
	<ul class="share-button">
		<li><?php echo $this->__('Share with your Friends:') ?></li>
		<?php foreach($collection as $provider): ?>
			<li class="<?php echo $provider->getId() ?>" title="<?php echo $provider->getTitle() ?>">
				<div class="share-icon share-icon-<?php echo $provider->getId() ?>" data-type="<?php echo $this->getShareObject()->getType() ?>" data-id="<?php echo $this->getShareObject()->getId() ?>"></div>	
				<div style="display:inline-block;">
					<div class="share-count" id="share-count-<?php echo $provider->getId() ?>"><?php echo $provider->getCount() ?></div>
					<div class="share-count-nub"><s></s><i></i></div>
				</div>		
			</li>
		<?php endforeach ?>
	</ul>
	<script type="text/javascript">
	//<![CDATA[
		var faonniShare = new Faonni.Share('.share-icon', <?php echo $this->getJsConfig() ?>);		
	//]]>
	</script>
<?php endif ?>